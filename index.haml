    %script{:type => 'text/javascript', :id => "dropboxjs", "data-app-key" => "nr1604ewqoph539"}
    %script{:type => 'text/javascript', :src => 'js/lib/libraries160422.js'}
    %script{:type => 'text/javascript', :src => 'js/Application.js'}